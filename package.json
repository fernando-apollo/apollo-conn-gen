{
  "name": "apollo-oas",
  "version": "1.0.10",
  "description": "Generates an Apollo Connector from an OpenAPI 3.x specification (YAML or JSON)",
  "author": "Fernando @ Apollo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernando-apollo/oas-to-connector.git"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "module-sync": "./dist/index.js",
      "require": null,
      "default": "./dist/index.js"
    },
    "./json": {
      "types": "./dist/json/index.d.ts",
      "module-sync": "./dist/json/index.js",
      "require": null,
      "default": "./dist/json/index.js"
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "prebuild": "rm -r dist",
    "build": "tsc",
    "test": "node --import tsx/esm --test 'tests/oas.test.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test && publint",
    "preversion": "npm run lint && npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@inquirer/checkbox": "^4.1.1",
    "@inquirer/core": "^10.1.7",
    "@inquirer/prompts": "^7.3.1",
    "commander": "^13.1.0",
    "lodash": "^4.17.21",
    "oas": "^25.3.0",
    "oas-normalize": "^12.1.0",
    "yoctocolors-cjs": "^2.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/inquirer": "^9.0.7",
    "@types/lodash": "^4.17.15",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-dts": "^1.3.13",
    "openapi-types": "^12.1.3",
    "prettier": "^3.5.3",
    "publint": "^0.3.9",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslint-config-prettier": "^1.18.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}